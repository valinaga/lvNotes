<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

    <%= stylesheet_link_tag "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/themes/ui-lightness/jquery-ui.css" %> 
    <%= javascript_include_tag :defaults %>
    <%= active_scaffold_includes %>
    <%= stylesheet_link_tag 'application' %>
    <%= stylesheet_link_tag 'mobile' if mobile_device? %>    
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
    <p>
      <% if mobile_device? %>
        <%= link_to "Full Site", :mobile => 0 %>
      <% else %>
        <%= link_to "Mobile Site", :mobile => 1 %>
      <% end %>
    </p>
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
	  <div>
	  	<% if current_admin_user %>
			<div>
				Loged in as: <%= current_admin_user.username %>
				<%= link_to "Log out", :admin_logout %>
			</div>
		<% else %>
			<div>
				<%= link_to "Log in", :admin_login %>
			</div>
		<% end %>
		<% if current_admin_user %>
			<div>
				Last login: <%= session[:last_date] %> from: <%= session[:last_ip] %>
			</div>
		<% end %>
	  </div>
      <%= yield %>
    </div>
  </body>
</html>
