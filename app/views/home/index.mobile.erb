<%if !user_signed_in? %>
<div data-role="page" id="auth" class="pagecontainer">
  <div data-role="header" data-position="fixed">
    <h2>yourLove.ly</h2>
  </div>
  <article data-role="content">
    <h3>The only app to garantee your happyness with your love one !</h3>
    <p>Please signin with any of the sites below. </p>
    <%=render 'shared/auth'%>
    <p>We are using them only for your convenience. We will
      never post anything there without your explicit permission. That's a prommise!</p>
  </article>
</div>

<%else%>
<%@sender = current_user%>
<div data-role="page" id="home" class="pagecontainer">
  <%= render 'shared/title'%>
  <article data-role="content">
    <div id="panel"> 
      <%=link_to "I really fucked up bad !", root_path, :'data-role' => "button", :'data-icon' => "alert", :'data-theme' => "b"%>
      <h2>Lovecards for <%=@sender.recipient.name%></h2>
      <ul data-role="listview" data-inset="true" data-theme="c" data-dividertheme="b" data-split-icon="refresh" data-split-theme="b"> 
        <li data-role="list-divider"> <%= Time.now.to_date%> <span class="ui-li-count"><%=@sender.letters.count-1%></span></li>
        <%= render(:partial => "letter", :collection => @sender.letters, :locals => { :sender => @sender}) %>
      </ul>
    </div>
  </article>
  <%=render :partial => 'shared/footer', :object => "a" %>
</div>

<div data-role="page" id="settings" class="pagecontainer">
  <%= render 'shared/title'%>
  <article data-role="content">
    <div id="panel">
      <h2>Setting</h2>
      <%=link_to "Your Own Settings", edit_sender_url(current_user), :'data-role' => "button", :'data-rel'=>"dialog", :'data-icon' => "gear"%>
      <%=link_to "Your Love.ly Settings", edit_recipient_url(current_user.recipient), :'data-role' => "button", :'data-rel'=>"dialog", :'data-icon' => "gear"%>
    </div>
  </article>
  <%=render :partial => 'shared/footer', :object => "b" %>
</div>
<div data-role="page" id="about" class="pagecontainer">
  <%= render 'shared/title'%>
  <article data-role="content">
    <div id="panel">
      <h2>About Us</h2>
    </div>
  </article>
  <%=render :partial => 'shared/footer', :object => "c" %>
</div>

<%end%>
