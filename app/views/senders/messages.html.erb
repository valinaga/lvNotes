<article data-role="content">
  <div id="panel"> 
  <h2><%=t "mesages"%>:</h2>
  <p><%= t "choose_msg", :name => @sender.recipient.name, :first_name => @sender.recipient.first_name%></p>
  <p>
    <ul data-role="listview" data-inset="true" data-theme="c" data-dividertheme="b"> 
      <%= render(:partial => "message", :collection => @messages, :locals => { :sender => @sender}) %>
    </ul>
  </p>
  </div>
</article>
