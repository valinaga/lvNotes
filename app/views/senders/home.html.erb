<div class="home">
  <div id="recipients">
    <h3>Recipients:</h3>
    <table cellpadding="0" cellspacing="0">
      <tr>
        <th>Name</th>
        <th>E-Mail</th>
      </tr>
      <%= render(:partial => "recipient", :collection => @sender.recipients, :locals => {:sender => @sender}) %>
    </table>
  </div>
  <%unless @sender.letters.empty? %>
  <div id="letters">
    <h3>Letters:</h3>
    <table cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th>Date</th>
          <th>Status</th>
          <th>Sent To</th>
          <th>Message</th>
        </tr>
      </thead>
      <tbody>
      <%= render(:partial => "letter", :collection => @sender.letters) %>
      </tbody>
    </table>
    
  </div>
  <%end%>
</div>