<div data-role="page" id="newmail" class="pagecontainer">
  <%= render 'shared/title'%>
  <article data-role="content">
    <div id="panel"> 
      <p><%= t 'mail_not_found', :provider => @sender.provider.camelize %></p>
      <%= form_for @sender, :url => savemail_url do |f| %>
        <div data-role="fieldcontain">
          <%= f.email_field :email, :placeholder => t("e-mail") %>
          <button type="submit" name="submit" value="submit-value"> <%= t("submit")%> </button>
        </div>  
      <% end %>
    </div>
  </article>
</div>
