<%= form_tag do %>
  <fieldset>
    <legend>Please Log In</legend>
    <div class="field">
      <label for="name" >Name:</label><br />
      <%= text_field_tag :name, params[:name], :size => 30 %>
    </div>
    <div class="field">
      <label for="password" >Password:</label><br />
      <%= password_field_tag :password, params[:password], :size => 30 %>
    </div>
    <div class="actions">
      <%= submit_tag "Login" %>
    </div>  
  </fieldset>
<% end %>
