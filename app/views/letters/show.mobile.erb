<div data-role="page" id="showletter" class="pagecontainer" data-theme="b">
  <div data-role="header" data-position="fixed">
    <h3><%= l @letter.sent, :format => :short %></h3>
  </div>
  <article data-role="content">
    <div id="panel"> 
      <br />
      <%=@letter.recipient.appelation%> <%= @letter.recipient.first_name %>,
      <br />
      <br />
      <%=@letter.message.content%>
      <%=@letter.sender.expand_sign.gsub(/\n/,"<br/>\n").html_safe%>
      <br />
      <br />
      <a href="#" data-role="button" data-icon="back" data-rel="back"><%=t "close"%></a>
    </div>
  </article>
</div>
