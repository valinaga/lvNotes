<div data-role="page" id="invite" class="pagecontainer" data-theme="b">
  <div data-role="header" data-position="fixed">
    <h3>yourLove.ly</h3>
  </div>
  <article data-role="content">
    <h3> <%=t "welcome" %> !</h3>
    <p>
      <strong><%=t "service"%> yourLove.ly</strong> <%=t "beta"%>
    </p>
    <p><%= t "enter_code"%> :</p>
    <div id="panel"> 
      <%= form_tag invited_url, :method => :get do %>
        <%= text_field_tag 'name', nil, :placeholder => t("enter_code") %>
        <button type="submit" name="submit" value="submit-value"><%=t "submit" %></button>
      <% end %>
    </div>
  </article>
</div>
